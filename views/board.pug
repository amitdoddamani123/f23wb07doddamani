extends layout

block content
  h1= title
  p #{title}

  p Query: #{query.rows}, #{query.cols}  

  - var rows = Number(query.rows)  
  - var cols = Number(query.cols) 

  - if (!Number.isInteger(rows) || !Number.isInteger(cols)){
    -}
  - else if (rows < 1 || rows > 10){
    p Rows should be xn the range of 1 to 10
    -}
  - else if (cols < 1 || cols > 10){
    p Columns should be in the range of 1 to 10
    -}
  - else{
    table#outer  
      - for (let m = 0; m < rows; m++){ 
        tr#middle  
          - for (let p = 0; p < cols; p++){
            - if (m === p){
              td= 1
              -}
            - else if (m === p + 1){
              td= 2
              -}
            - else if (m === p - 1){
              td= m
              -}
            - else{
              td= 0
              -}
          -}
      -}
    -}